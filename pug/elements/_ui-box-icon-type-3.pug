//- icon - icon class
//- title - box title
//- title - box title attr
//- desc - description of box
mixin box-icon-type-3(icon, title, titleAttr, desc)
  // Icon Box Type 3
  .unit.align-items-center.unit-spacing-xs.unit-xs.flex-sm-row.text-center.text-sm-left
    .unit-left
      span.icon.novi-icon.text-middle(class= icon)
    .unit-body
      h4.text-spacing-60(class= titleAttr)= title
  p.offset-top-10.text-center.text-sm-left= desc