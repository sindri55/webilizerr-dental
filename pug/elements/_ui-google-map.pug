mixin google-map( map, markers )
  -
    map = map || {};
    map.zoom = map.zoom || 5;
    map.icon = map.icon || 'images/gmap_marker.png';
    map.iconActive = map.iconActive || 'images/gmap_marker_active.png';
    map.center = map.center || '9870 St Vincent Place, Glasgow, DC 45 Fr 45.';
    map.styles = map.styles || '[{"featureType":"road","elementType":"geometry","stylers":[{"lightness":100},{"visibility":"simplified"}]},{"featureType":"water","elementType":"geometry","stylers":[{"visibility":"on"},{"color":"#C6E2FF"}]},{"featureType":"poi","elementType":"geometry.fill","stylers":[{"color":"#C5E3BF"}]},{"featureType":"road","elementType":"geometry.fill","stylers":[{"color":"#D1D1B8"}]}]';
  .google-map-container( data-zoom= map.zoom data-center= map.center, data-styles= map.styles  data-icon= map.icon, data-icon-active= map.iconActive)&attributes( attributes )
    .google-map
    if ( markers )
      ul.google-map-markers
        each marker in markers
          
          li( data-location= marker.location, data-description= marker.description )
