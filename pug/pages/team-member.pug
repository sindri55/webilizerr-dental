        .owl-carousel.owl-carousel-default.owl-carousel-class-light(data-loop="false" data-items="1" data-sm-items="2" data-md-items="3" data-dots="true" data-mouse-drag="false" data-lg-items="4" data-xl-items="6" data-nav="false")
