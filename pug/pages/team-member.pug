extends  ../_skeleton

//- Includes
include ../elements/_ui-material-parallax

//-Title
block title
  title Team Member

//- Page
block page

  // Page Head
  header.page-head
    //- RD Navbar
    +rd-navbar-top-panel(
    'rd-navbar-light',
    {
      "data-lg-auto-height": "true",
      "data-md-layout": 'rd-navbar-fixed',
      "data-lg-layout": 'rd-navbar-static',
      "data-lg-stick-up": 'true'
    },
    cfg.brand.logoInverse,
    cfg.nav.services.submenu.link1,
    cfg.nav
    )

    // Breadcrumbs
    section.context-dark
      +material-parallax({ img: 'images/background-03-1920x640.jpg' })
        .bg-overlay-info
          .container.section-34.section-md-85.text-lg-left
            div.d-none.d-md-block.d-lg-inline-block
              h1 Team Member Page
            div.pull-md-right.offset-md-top-10.offset-lg-top-20
              ul.p.list-inline.list-inline-dashed
                li.list-inline-item
                  a(href= cfg.nav.home.href) Home
                li.list-inline-item
                  a(href= cfg.nav.aboutUs.href) About Us
                li.list-inline-item Team Member Page
  
  // Dr. Mark Hoffman
  section.section-98.section-md-110.novi-background( data-preset!={ title: 'Content block 7', category : 'content', reload: false, id: 'content-block-7'})
    .container
      .row.justify-content-sm-center
        .col-sm-10.col-lg-12
          .row.justify-content-sm-center
            .col-lg-4
              img.img-fluid.d-inline-block(src="images/user-mark-hoffman-370x370.jpg" alt="")
            .col-lg-8.text-lg-left.offset-top-34.offset-lg-top-0.inset-lg-left-50
              h3 Dr. Mark Hoffman
              p
                span.small.text-dark MBBS, DCH, DRCOG, MRCGP
              .offset-top-20.offset-lg-top-41
                p Our clinic's Chief Medical, Dr. Mark Hoffman has been working in this field of medical specialization since 2002. He obtains his chief position at our clinic since 2010. Most of all he loves to see you walk in with a concern and walk out with a bright wide smile!
                p Dr. Mark Hoffman graduated from Loma Linda Dental School, receiving his DDS and additionally attended a university residency at UIC, receiving a degree in Prosthodontics and Implant Technology.
                p His expertise covers many specialized dental services: both regular cleaning and deep cleaning. All of which help in maintaining healthy gums and teeth, surgical and routine extractions, and oral health treatment planning. Dr. Hoffman's main objective for all our patients is quite simple - learning about your dental health concerns! And of course providing all customers with remarkable dental care!

