  // Send Me a Message
  section.section-98.section-md-top-110.section-md-bottom-124.novi-background
    .container
      h1 Send Us a Message
      hr.divider.bg-mantis
      .row.justify-content-sm-center.offset-top-50.offset-xl-top-66
        .col-sm-10.col-md-8
          // RD Mailform
          form.rd-mailform.text-left(data-form-output="form-output-global", data-form-type='contact', method='post', action='bat/rd-mailform.php')
            .row
              .col-xl-6
                .form-group
                  label.form-label.form-label-outside(for="contact-me-name") First Name
                  input#contact-me-name.form-control(type="text" name="name" data-constraints="@Required")
              .col-xl-6.offset-top-20.offset-xl-top-0
                .form-group
                  label.form-label.form-label-outside(for="contact-me-phone") Last Name
                  input#contact-me-phone.form-control(type="text" name="phone" data-constraints="@Required")
              .col-xl-12.offset-top-20.offset-xl-top-20
                .form-group
                  label.form-label.form-label-outside(for="contact-me-email") E-mail
                  input#contact-me-email.form-control(type="email" name="email" data-constraints="@Required @Email")
              .col-xl-12.offset-top-20.offset-xl-top-20
                .form-group
                  label.form-label.form-label-outside(for="contact-me-message") Message
                  textarea#contact-me-message.form-control(name="message" data-constraints="@Required" style="height: 150px")
            .row.justify-content-sm-center.offset-top-30
              .col-sm-4.col-md-3
                button(type="submit").btn.btn-block.btn-primary send

  .container.container-wide
    hr.hr.bg-gray-lightest

